<!--pages/grid/grid.wxml-->
<g-box title="基础布局"></g-box>
<g-grid g-class="custom-grid">
  <g-col g-class="custom-col" span="4" wx:for="{{gridData1}}" wx:key="index">{{item.value}}</g-col>
</g-grid>
<g-box title="border布局"></g-box>
<g-grid g-class="custom-grid" mode="border">
  <g-col g-class="custom-col custom-link" span="6" wx:for="{{gridData1}}" wx:key="index">{{item.value}}</g-col>
</g-grid>
