/* component/drawer/drawer.wxss */
.g-mask,
.g-fixed-bar{
  visibility:hidden;
  position: fixed;
}
.g-mask{
  top: 0;
  left: 0;
  z-index: 49;
  width: 100%;
  height: 100%;
  background-color: rgba(47, 64, 80, .28);
}
.g-fixed-bar{
  z-index: 50;
  box-sizing: border-box;
  background-color: #fff;
  transition: all ease .3s;
}
.g-mask-show,
.g-drawer-show{
  visibility: initial;
}
.g-drawer-top{
  top: 0;
  left: 0;
  width: 100%;
  height: 60%;
  transform: translate3d(0, -100%, 0);
}
.g-drawer-right{
  top: 0;
  right: 0;
  width: 60%;
  height: 100%;
  transform: translate3d(100%, 0, 0);
}
.g-drawer-bottom{
  bottom: 0;
  left: 0;
  width: 100%;
  height: 60%;
  transform: translate3d(0, 100%, 0);
}
.g-drawer-left{
  top: 0;
  left: 0;
  width: 60%;
  height: 100%;
  transform: translate3d(-100%, 0, 0);
}
.g-drawer-show{
  transform: translate3d(0, 0, 0);
}