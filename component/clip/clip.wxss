/* component/clip/clip.wxss */
.g-clip-bar{
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100%;
  height: 100%;
  background-color: #000;
  display: flex;
  flex-flow: row;
  flex-direction: column;
}
.g-clip-top{
  position: relative;
  flex: 1;
}
.g-clip-bom{
  position: relative;
  z-index: 3;
  height: 88rpx;
  color: #fff;
  display: flex;
}
.g-clip-bom > view:nth-child(1){
  flex: 1;
  color: rgba(255,255,255, .6);
}
.g-clip-btn{
  padding:0 30rpx;
  display: inline-block;
  height: 88rpx;
  line-height: 88rpx;
}
.g-clip-bom:after {
  content: '';
  display: block;
  position: absolute;
  top:0;
  left: 0;
  height: 1px;
  width: 100%;
  border-bottom: 1rpx solid rgba(255,255,255, .2);
  transform-origin: 50% 100%;
}
.isIPX .g-clip-bom{
  height: calc(88rpx + 34px);
}
.g-clip-canvas{
  position: fixed;
  top: 0;
  left: 100%;
}
.g-clip-box{
  position: absolute;
  width: calc(100% - 64rpx);
  height: calc(100vw - 64rpx);
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.g-clip-area{
  position: absolute;
  z-index: 3;
  width: 100%;
  height: 100%;
  border:2rpx solid #fff;
  box-sizing: border-box;
  box-shadow: 0 0 0 2000rpx rgba(0,0,0, .75)
}
.g-clip-img{
  width: 100%;
  height: 100%;
}
.g-clip-arrow::before,
.g-clip-arrow::after{
  content: '';
  position: absolute;
  display: block;
  width: 32rpx;
  height: 32rpx;
}
.g-clip-arrow.top::before{
  left: -6rpx;
  top: -6rpx;
  border-top: 6rpx solid #fff;
  border-left: 6rpx solid #fff;
}
.g-clip-arrow.top::after{
  right: -6rpx;
  top: -6rpx;
  border-top: 6rpx solid #fff;
  border-right: 6rpx solid #fff;
}
.g-clip-arrow.bom::before{
  left: -6rpx;
  bottom: -6rpx;
  border-left: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
}
.g-clip-arrow.bom::after{
  right: -6rpx;
  bottom: -6rpx;
  border-right: 6rpx solid #fff;
  border-bottom: 6rpx solid #fff;
}
.animate-img{
	transition: all .2s ease-in-out;
}