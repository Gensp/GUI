/* component/modal/modal.wxss */
.g-loading{
  display: inline-block;
  vertical-align: middle;
  margin-right: 8rpx;
}
.g-loading::after{
  content: '';
  display: block;
  width: 28rpx;
  height: 28rpx;
  position: relative;
  z-index: 2;
  margin:0 auto;
  text-indent: -9999px;
  border-radius: 50%;
  border-top: 2rpx solid rgba(44, 169, 225, 1);
  border-right: 2rpx solid rgba(0, 0, 0, .1);
  border-bottom: 2rpx solid rgba(0, 0, 0, .1);
  border-left: 2rpx solid rgba(0, 0, 0, .1);
  animation: loading 2s infinite linear;
}
@keyframes loading {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.flex-bar{
  display: flex;
}
.flex1{
  flex: 1;
  overflow: hidden;
}
.color-gray{
  color: rgba(153, 153, 153, 1);
}
.color-blue{
  color: rgb(44, 169, 225);
}
.border-top,
.border-right{
  position: relative;
}
.border-right::after{
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 1px;
  height: 100%;
  border-right: 1px solid rgba(0,0,0, .07);
  transform: scaleX(0.5);
}
.border-top::after{
  content: '';
  position: absolute;
  top:0;
  left: 0;
  height: 1px;
  width: 100%;
  border-bottom: 1px solid rgba(0,0,0, .07);
  display: block;
  transform-origin: 50% 100%;
  transform: scaleY(0.5);
}
.g-btn{
  display: block;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
}
.g-btn:active{
  opacity: .7;
}
.g-mask,
.g-fixed-bar{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.g-mask{
  z-index: 49;
   background-color: rgba(47, 64, 80, .28);
}
.g-fixed-bar{
  z-index: 50;
  display:box; 
  display:-webkit-box;
  -webkit-box-pack:center; 
  box-pack:center;
  -webkit-box-orient:vertical; 
  box-orient:vertical;
  -webkit-box-align:center;
  box-align:center; 
}
.g-modal-bar{
  width: 560rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  background-color: #fff;
  box-shadow: 0 4rpx 64rpx rgba(47, 64, 80, .12);
