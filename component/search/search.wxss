/* component/search/search.wxss */
.search-bar{
  position: relative;
  background-color: #fff;
  box-shadow: 0 6rpx 10rpx rgba(0,0,0, .03);
}
.search-icon{
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translate(0, -50%);
  width: 32rpx;
  height: 32rpx;
  background-image: url(data:image/png;base64,);
  background-size: cover;
}
.input-txt{
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 40px;
  padding: 0 130rpx 0 80rpx;
}
.g-cancel{
  color: #999;
  position: absolute;
  z-index: 2;
  line-height: 88rpx;
  width: 130rpx;
  text-align: center;
  top: 50%;
  right: 0;
  transform: translate(0, -50%);
}
.opacity:active{
  opacity: .7;
}