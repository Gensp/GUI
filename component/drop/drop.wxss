/* component/drop/drop.wxss */
.opacity{
  opacity: .7;
}
.item-drop{
  position: absolute;
  z-index: 10;
  left: 50%;
  top: 50%;
  transform-origin: center;
}
.drop-img{
  transform-origin: center;
  border:1px solid transparent;
}
.drop-icon{
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background-position: center;
  background-size: cover;
  background-color: rgba(44,169,225, .95);
  border-radius: 50%;
  transform-origin: center;
}
.drop-active{
  border-color: #2ca9e1;
}
.drop-close{
  top: -20rpx;
  left: -20rpx;
  background-image: url(data:image/png;base64,)
}
.drop-scale{
  bottom:-20rpx;
  right: -20rpx;
  background-image: url(data:image/png;base64,)
}